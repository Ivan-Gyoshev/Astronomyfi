@model DeleteCommentViewModel

@{ 
    this.ViewData["Title"] = "Delete Comment";
}

<h3>Hello @this.User.Identity.Name</h3>
<h4>Are you sure that you want to delete this item ? </h4>
<form method="post">
    <button asp-controller="Comments"
            asp-action="DeleteConfirmation"
            asp-route-commentId="@this.Model.Id"
            asp-route-postId="@this.Model.PostId"
            class="btn btn-outline-danger font-weight-bold">
        Yes
    </button>
    <a asp-controller="Posts"
       asp-action="Details"
       asp-route-postId="@this.Model.PostId"
       class="btn btn-outline-primary">No</a>
</form>

<div class="container com-bg mt-4">
    <div class="row">
        <h4 class="col-9">@this.Model.Author.UserName</h4>
        <span class="col-2 text-secondary">@this.Model.CreatedOn.ToString("dd/MM/yyyy HH:mm")</span>
    </div>
    <p>@this.Model.Content</p>
</div>